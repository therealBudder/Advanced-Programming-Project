<Window x:Class="AdProgrammingProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdProgrammingProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32">Graphical Calculator</TextBlock>
        <TextBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Enter an expression" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="40" Margin="30,50,0,0" FontSize="16" TextAlignment="Right" VerticalContentAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="0" Text="Result" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="40" Margin="170,50,0,0" FontSize="16" TextAlignment="Right" VerticalContentAlignment="Center"/>
        

    </Grid>
</Window>
